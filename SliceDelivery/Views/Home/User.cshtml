@{
    ViewData["Title"] = "Privacy Policy";
    string family = "55";
    string name = "55";
    string address = "55";
    string phone = "55";
    bool edit = false;
}


<head>
  <title>Личный кабинет</title>
  <link rel="stylesheet" type="text/css" href="css.css">
  <style>
      .container{
          margin-top: 90px;
          margin-bottom: 150px;
      }
     
       .superBody{
           margin-top: 150px !important;
       }

        table {
            width: 100%;
            border-collapse: collapse;
            font-family: "Helvetica Neue", Arial, sans-serif;
            font-size: 14px;
            margin: 0;
            padding: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f9f9f9;
        }

        td > img {
            max-width: 50px;
            max-height: 50px;
            vertical-align: middle;
        }
        .cartBot{
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 25px;
        }
        .total-price {
            font-weight: bold;
        }
         .order-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .order-btn:hover {
            background-color: #45a049;
        }
          h2 {
    text-align: center;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 5px;
    font-size: 18px;
  }

  input[type="text"],input[type="phone"],
  input[type="password"] {
    width: 50%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }

  button {
    display: block;
    width: 50%;
    padding: 10px;
    background-color:#252525;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  button:hover {
    background-color:  #F0B559;
  }
  </style>
</head>
<body>
  <div class="container">
    <div class="profile-header">
      <div class="profile-avatar">
        <img src="~/images/path_to_your_avatar.jpg" alt="Аватар">
      </div>
      <div class="profile-info">
        <div class="profile-name">Имя пользователя</div>
        <!--<div class="profile-email">user@example.com</div>-->
      </div>
    </div>

    <div class="profile-section">
      <div class="profile-section-title">Персональная информация</div>
      <div class="profile-section-content">
         <form method="post" asp-controller="HomeController" asp-action="UpdateProfile">
        <div class="form-group">
          <label for="username">Фамилия</label>
          @if(family != ""){
                  <span>Ваша фамилия</span>
          }
          
          @if(edit){
                    <input type="text" id="firstName" name="firstName" placeholder="Введите вашу фамилию">
          }
        

        </div>
        <div class="form-group">
          <label for="name">Имя</label>
                        @if (name != "")
                        {
                        <span>Ваше имя</span>
                        }

                        @if (edit)
                        {
                             <input type="text" id="name" name="name" placeholder="Введите ваше имя">
                        }
         
        </div>

         <div class="form-group">
          <label for="address">Адрес</label>
                        @if (address != "")
                        {
                            <span>Ваш адрес</span>
                        }

                        @if (edit)
                        {
                                     <input type="text" id="address" name="address" placeholder="Введите ваш адрес">
                        }
          
        </div>

         <div class="form-group">
          <label for="phone">Телефон</label>
                        @if (phone != "")
                        {
                                <span>Ваш номер телефона</span>
                        }

                        @if (edit)
                        {
                                              <input type="phone" id="phone" name="phone" placeholder="Введите ваш телефон">
                        }
         
        </div>
        <button id="entrance-btn editBtn" type="button" onclick="changeViewBag()">Изменить данные</button>
                    @if (edit)
                    {
                                                       <button id="entrance-btn" type="submit" style="margin-top: 15px">Сохранить изменения</button>
                    }
       
      </form>
      </div>
    </div>

    <div class="profile-section">
      <div class="profile-section-title">Настройки</div>
      <div class="profile-section-content">
        <p>Здесь могут быть ваши настройки аккаунта, такие как предпочитаемый язык, уведомления и другие параметры.</p>
      </div>
    </div>

    <div class="profile-section">
      <div class="profile-section-title">История заказов</div>
      <table>
        <thead>
            <tr>
                <th>Количество продуктов</th>
                <th>Общая цена</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>5шт</td>
                <td>5000</td>
                <td>12.02.2022</td>
            </tr>
            <tr>
         
        </tbody>
    </table>
    </div>
  </div>
  <script>
    function changeViewBag() {
        @{
            edit = true;
        }
    }
</script>
</body>

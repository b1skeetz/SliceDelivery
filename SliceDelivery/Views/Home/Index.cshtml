        <form id="orderFormId" method="post" asp-controller="Home" asp-action="Mailer">
            <h3>@language.GetKey("getInTouch")</h3>
            <div class="inputBox">
                <i class="fas fa-user"></i>
                <input asp-for="Item2.Name" type="text" name="name" placeholder="@language.GetKey("name")">
            </div>
            <div class="inputBox">
                <i class="fas fa-envelope"></i>
                <input asp-for="Item2.Email" type="email" name="email" placeholder="@language.GetKey("email")">
            </div>
            <div class="inputBox">

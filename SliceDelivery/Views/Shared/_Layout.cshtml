<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Дипломная работа</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header class="header" >

        <a href="#" class="logo">
            <img src="~/images/pngegg.png" alt="logo">
        </a>

        <nav class="navbar">
            <a id="greeting" href="./index.html" class="active">home</a>
            <a id="about" action="" >About Us</a>
            <a id="menu" href="./menu.html">menu</a>
            <a id="Products" href="./products.html">products</a>
            <a id="Review" href="./review.html">review</a>
            <a id="contact" href="./contact.html">contact</a>
            <a id="blog" href="./blog.html">blog</a>
        </nav>

        <div class="buttons">
            <button id="search-btn">
                <i class="fas fa-search"></i>
            </button>
            <button id="cart-btn">
                <i class="fas fa-shopping-cart"></i>
            </button>
            <button id="user-btn">
                <i class="fas fa-user"></i>
            </button>
            <button id="menu-btn" >
                <i class="fas fa-bars"></i>

            </button>
            <button id="en-btn">EN</button>
            <button id="ru-btn">RU</button>
            <button id="kz-btn">KZ</button>
        </div>    


      <div class="search-form">
        <h1 id="Search" type="text" class="search-input" id="search-box" > Search</h1>
  <input >
  <i class="fas fa-search"></i>
</div>
        <div class="cart-items-container">
            <div class="cart-item">
                <i class="fas fa-times"></i>
                <img src="~/images/pngwing.com(1).png" alt="menu">
                <div class="content">
                    <h3 id="Pizza_margarita">Pizza margarita</h3>
                    <div class="price">$20.99 </div>
                </div>
            </div>
            <div class="cart-item">
                <i class="fas fa-times"></i>
                <img src="~/images/pngwing.com(2).png" alt="menu">
                <div class="content">
                    <h3 id="Big_burger">Big burger</h3>
                    <div class="price">$16.99 </div>
                </div>
            </div>
            <div class="cart-item">
                <i class="fas fa-times"></i>
                <img src="~/images/pngwing.com(3).png" alt="menu">
                <div class="content">
                    <h3 id="Cheesburger">Cheesburger</h3>
                    <div class="price">$13.99 </div>
                </div>
            </div>
            <div class="cart-item">
                <i class="fas fa-times"></i>
                <img src="~/images/pngwing.com (4).png" alt="menu">
                <div class="content">
                    <h3 id="Dublburger">Dublburger</h3>
                    <div class="price">$12.99 </div>
                </div>
            </div>
            <a href="#" class="btn" id="check_out">check out </a>
        </div>
    </header>
   
            @RenderBody()
     
<section class="footer">
        <div class="search">
            <input type="text" class="search-input" placeholder="Search">
            <button class="btn btn-primary">search</button>
        </div>
        <div class="share">
            <a href="#" class="fab fa-facebook"></a>
            <a href="#" class="fab fa-instagram"></a>

        </div>
        <div class="links">
            <a href="#home">home</a>
            <a href="#about">about</a>
            <a href="#menu">menu</a>
            <a href="#products">products</a>
            <a href="#review">review</a>
            <a href="#contact">contact</a>
            <a href="#blog">blog</a>
        </div>


<script src="script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
